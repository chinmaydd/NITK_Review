<title>Who again?</title>
<body style="background-image:url(http://evansheline.com/wp-content/uploads/2011/09/pixar_luxo.png);background-repeat:no-repeat;background-size:cover" >

<div class="container" style="width:700px" >

<div class="center jumbotron">

<div class="file show">
	<h2 style="font-size:50px"><%= @user.username %></h2>
	<div class="well" style="font-size:25px">
    <%= @user.first_name + ' ' + @user.last_name %>
	</div>

	<div class="well" style="font-size:25px">
    No of Reviews: <%= @count %>
	</div>
	
	<% if @user==@current_user||@current_user.admin? %>
		<%= link_to("Edit Profile", {action: 'edit', id: @user.id}, :class => "btn btn-success btn-raised") %>
		<br>
		<br>
	<% end %>

	<%= link_to("Back to Users list", {action: 'index'}, :class => "btn btn-default btn-raised") %>
</div>

</div>
</div>
