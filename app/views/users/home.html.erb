<% if !flash[:notice].blank? %>
 	<div class="alert alert-dismissable alert-warning">
 	<button type="button" class="close" data-dismiss="alert">Ã—</button>
 	<p><%= flash[:notice] %></p>
 	</div>
 <% end %>

 <div class="center jumbotron">
 <% if session[:user_id]==nil %>
 <h1>Welcome</h1>

 <%= form_for(:user, url: {action: 'attempt_login'}, class: "form-horizontal") do |f| %>
 
 <div class="row">
 <div class="col-md-4 col-md-offset-4">

 <table summary="User login field">
	<div class="form-group">
	    <%= f.text_field :username, :class => "form-control floating-label", :type => "text", :placeholder => "username" %>
	</div>
	<div class="form-group">
	    <%= f.password_field :password, :class => "form-control floating-label", :type => "password", :placeholder => "Password" %>
	</div>
 </table>

 </div>
 </div>

 <%= submit_tag("Login", :class => "btn btn-default btn-raised") %>
 <br>
 <%= link_to("Sign Up!", {action: 'new'}, :class => "btn btn-success btn-raised") %>

 <% end %>
 <% end %>

  <div id="container">
    <div id="background" class="translucent"></div>
    <div id="content"></div>
 </div>

 </div>


